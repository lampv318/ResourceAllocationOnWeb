<!DOCTYPE html>
<html>
  <head>
    <title>ResourceAllocationOnWeb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap-theme.min.css">
  </head>
  <body>
    <%= render 'layouts/header' unless (current_page?(login_path) || current_page?(signup_path) || current_page?(root_path)) %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
      <%= render 'layouts/footer' unless (current_page?(login_path) || current_page?(signup_path) || current_page?(root_path)) %>
    </div>
  </body>
</html>
