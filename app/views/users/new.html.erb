  <%= form_for(@user, url: signup_path, :html => {class: "form"}) do |f| %>
    <h3 class="form-heading">Log in to Resource Allocation App</h3>
    <%= render "shared/error_messages" %>
    <div class="form-field">
      <div class="field">
        <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", 
          class: "form-control", placeholder: "Password"  %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "current-password", 
          class: "form-control", placeholder: "Password Confirmation"  %>
      </div>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
    <p class="text-center" style="margin-top:10px;">
      or <a href="<%= login_path %>">log in</a>
    </p>
  <% end %>
